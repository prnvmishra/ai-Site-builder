  {
    "version": 2,
    "builds": [
        {
            "src": "server.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "dist/**",
                    "prisma/**"
                ]
            }
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.ts"
        },
        {
            "src": "/(.*)",
            "dest": "client/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    },
    "functions": {
        "server.ts": {
            "maxDuration": 30
        }
    }
}